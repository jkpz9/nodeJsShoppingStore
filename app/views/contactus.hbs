{{#section 'bigTitle'}}
    CONTACT US
{{/section}}

<div class="content">
    <div class="container">
        <div class="map-area">
            <iframe class="map" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDnwpcLBgVHLg6R4e6heXuWrCp0cuWIxXk
                        &q=Đại học khoa học tự nhiên" allowfullscreen>
            </iframe>
        </div>
        <div id="form-contact" class="form-contact">
            <h4>Email Us</h4>
            <form class="form-horizontal" action="">

                <div class="form-group">
                    <label class="control-label col-sm-3" for="name">Your name *:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="name" placeholder="Your name">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-3" for="email">Email *:</label>
                    <div class="col-sm-9">
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="message">Message *:</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" rows="5" id="message" placeholder="Message"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                        <button type="submit" class="btn btn-default">Gửi</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- End form contact -->
    </div>

    <!-- End map-area -->
</div>
<!-- End content -->