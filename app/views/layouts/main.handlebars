  <body>
   
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>

                            {{#if user}}
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key"><i class="fa fa-user"></i>Hello,{{{user.firstName}}} !</span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="profile/{{{user.id}}}">Profile</a></li>
                                    <li>
                                        <a href="/bought_histories">Histories</a>
                                    </li>
                                     <li>
                                        <a href="logout">Logout</a>
                                    </li>
                                    {{#if user.isAdmin}}
                                     <li>
                                        <a href="dashboard">DashBoard</a>
                                    </li>
                                    {{/if}}
                                </ul>
                            </li>
                            {{else}}
                                 <li>
                                     <a href="login">
                                        <i class="fa fa-user"></i> Login
                                    </a>
                                 </li>
                                <li>
                                    <a href="signup">
                                        <i class="fa fa-user"></i> Signup
                                    </a>
                                </li>

                            {{/if}}

                        </ul>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key">currency :</span><span class="value">USD </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">USD</a></li>
                                    <li><a href="#">INR</a></li>
                                    <li><a href="#">GBP</a></li>
                                </ul>
                            </li>

                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key">language :</span><span class="value">English </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">English</a></li>
                                    <li><a href="#">French</a></li>
                                    <li><a href="#">German</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->
    
    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="/">e<span>Electronics</span></a></h1>
                    </div>
                </div>
                
                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a href="/shopping-cart">Cart - 
                            <span id = "cart-price" class="cart-amunt">
                                {{#with layoutVM.cartInfo}}
                                {{#if cart}}
                                    {{moneyFormat totalPrice}} vnđ
                                {{else}}
                                    0
                                {{/if}}
                            </span> 
                            <i class="fa fa-shopping-cart"></i> 
                            <span id = "cart-qty" class="product-count">
                                {{#if cart}}
                                    {{totalQty}}
                                    {{else}}
                                    0
                                {{/if}}
                                {{/with}}
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row searchArea" style="margin-bottom:60px;">
                <div class="col-md-12 col-lg-12">
                    <div class="input-group" id="adv-search">
                        <input id = "name-product" type="text" class="form-control" placeholder="Search for products" />
                        <div class="input-group-btn">
                            <div class="btn-group" role="group">
                                <div class="dropdown dropdown-lg">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <span class="caret"></span>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" role="menu">
                                        <form id = "search-product"class="form-horizontal" role="form">
                                            <div class="form-group">
                                                <label for="filter">Brand</label>
                                                <select id = "brands" class="form-control">
                                                    <option value="0" selected>All</option>
                                                    {{#each layoutVM.manufacturer}}
                                                    <option value={{manufacturerId}}>{{manufacturerName}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="filter">Type</label>
                                                <select id = "categories" class="form-control">
                                                    <option value="0" selected>All</option>
                                                    {{#each layoutVM.category}}
                                                    <option value="{{categoryId}}">{{categoryName}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                            <div class="radio">
                                                <input type="radio" name="optionsPrice" id="optionsRadios0" value="All" checked>
                                                <label for="optionsRadios0">
                                                    All
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <input type="radio" name="optionsPrice" id="optionsRadios1" value="LowerThan5Million">
                                                <label for="optionsRadios1">
                                                    Lower than 5,000,000 vnđ
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <input type="radio" name="optionsPrice" id="optionsRadios2" value="From5MillionTo10Million">
                                                <label for="optionsRadios2">
                                                    From 5,000,000 vnđ to 10,000,000 vnđ
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <input type="radio" name="optionsPrice" id="optionsRadios3" value="HigherThan10Million">
                                                <label for="optionsRadios3">
                                                    Higher than 10,000,000 vnđ
                                                </label>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <button id = "btn-search" type="button" class="btn btn-primary button-search" type="submit">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->
    
    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div> 
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active" id = "menu-home"><a href="/">Home</a></li>
                        <li id = "menu-shop"><a href="shop" >Shop page</a></li>
                        <li id = "menu-manufacturer" class="dropdown">
                            <button class="dropbtn">Producer</button>
                            <div class="dropdown-content">
                                {{#each layoutVM.manufacturer}}
                                <a href="/manufacturer/{{manufacturerName}}">{{manufacturerName}}</a>
                                {{/each}}
                            </div>
                        </li>
                        <li id = "menu-category" class="dropdown">
                            <button class="dropbtn">Produce Type</button>
                            <div class="dropdown-content">
                                {{#each layoutVM.category}}
                                <a href="/category/{{categoryName}}">{{categoryName}}</a>
                                {{/each}}
                            </div>
                        </li>
                        <li id = "menu-aboutus"><a href="aboutus">About us</a></li>
                        <li id = "menu-contactus"><a href="contactus">Contact</a></li>
                    </ul>
                </div>  
            </div>
        </div>
    </div> <!-- End mainmenu area -->
    
