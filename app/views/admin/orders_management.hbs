{{#section 'BigTitle'}} Orders Management {{/section}}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    ALL Orders
                </h2>
            </div>
            <div class="body">
                <div class="table-responsive text-center">
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th class="text-center">Order ID</th>
                                <th class="text-center">Buyer</th>
                                <th class="text-center">Address</th>
                                <th class="text-center">Contact Phone</th>
                                <th class="text-center">Date</th>
                                <th class="text-center">Paid Amount</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">View Detail</th>
                            </tr>
                        </thead>
                        <tfoot>
                        </tfoot>
                        <tbody>
                            {{#each lOrder}}
                            <tr data-type = "{{state}}">
                                <td class="hightlight">{{orderId}}</td>
                                <td>{{firstName}} {{lastName}}</td>
                                <td>{{deliveryAddress}}, {{cityName}}, {{provinceName}}</td>
                                <td>{{phoneNumber}}</td>
                                <td>{{dateFormat}}</td>
                                <td>{{moneyFormat totalAmount}}</td>
                                <td>{{stateFormat}}</td>
                                <td>
                                    <a href="/orders_management/order_detail/{{orderId}}">
                                        <button type="button" class="btn btn-info btn-xs" aria-label="Left Align" title="View Detail">
                                            <i class="material-icons">visibility</i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>

                 <div class="row">
                        <div class="col-md-12">
                            <div class="product-pagination text-center">
                                <nav>
                                    <ul class="pagination">
                                        <li>
                                            <a href="orders_management?page=1" aria-label="Previous">
                                                <i class="material-icons">chevron_left</i>
                                            </a>
                                        </li>
                                        {{#each page_numbers}} {{#if isCurPage}}
                                        <li class="active">
                                            <a href="javascript:;">{{value}}</a>
                                        </li>
                                        {{else}}
                                        <li>
                                            <a href="orders_management?page={{value}}">{{value}}</a>
                                        </li>
                                        {{/if}} {{/each}}
                                        <li>
                                            <a href="orders_management?page={{nPages}}" aria-label="Next">
                                                <i class="material-icons">chevron_right</i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
{{#section 'js'}}
<script>
    $("[data-type = '-1']").addClass('danger');
    $("[data-type = '0']").addClass('warning');
    $("[data-type = '1']").addClass('bg-teal');
    $("[data-type = '2']").addClass('success');
    console.log( $("[data-type = '-1']"));
</script>
{{/section}}