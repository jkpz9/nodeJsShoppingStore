{{#section 'BigTitle'}} Manufacturer Management {{/section}}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    MANUFACTURER
                    <small>Add quick, dynamic tab functionality to transition through panes of local content</small>
                </h2>
            </div>
            <div class="body">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs tab-nav-right" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#home" data-toggle="tab">ALL MANUFACTURER</a>
                    </li>
                    <li role="presentation">
                        <a href="#add" data-toggle="tab">ADD MANUFACTURER</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="home">
                        <div class="table-responsive text-center">
                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead>
                                    <tr>
                                        <th class="text-center">Manufacturer ID</th>
                                        <th class="text-center">Manufacturer Name</th>
                                        <th class="text-center">Manufacturer Address</th>
                                        <th class="text-center">Manufacturer Email</th>
                                        <th class="text-center">Manufacturer Phone</th>
                                        <th class="text-center">Manufacturer Description</th>
                                        <th class="text-center"></th>
                                        <th class="text-center"></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                </tfoot>
                                <tbody>
                                    {{#each lManufacturer}}
                                    <tr id={{manufacturerId}}>
                                        <td class="hightlight">{{manufacturerId}}</td>
                                        <td>{{manufacturerName}}</td>
                                        <td>{{manufacturerAddress}}</td>
                                        <td>{{manufacturerEmail}}</td>
                                        <td>{{manufacturerPhones}}</td>
                                        <td>{{manufacturerDescription}}</td>
                                        <td>
                                            <button type="button" class="btn btn-warning btn-xs btn-edit" aria-label="Left Align" onclick="showForm({{manufacturerId}},'{{manufacturerName}}','{{manufacturerAddress}}','{{manufacturerEmail}}','{{manufacturerPhones}}','{{manufacturerDescription}}')">
                                                <i class="material-icons">edit</i>
                                            </button>
                                        </td>
                                        {{#if noProduct}}
                                            <td>
                                                <button type="button" class="btn btn-danger btn-xs btn-edit" aria-label="Left Align" onclick="deleteManufacturer({{manufacturerId}})">
                                                    <i class="material-icons">edit</i>
                                                </button>
                                            </td>
                                        {{else}}
                                            <td>
                                                <button type="button" class="btn btn-danger btn-xs btn-edit" aria-label="Left Align" disabled>
                                                    <i class="material-icons">edit</i>
                                                </button>
                                            </td>
                                        {{/if}}
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="add">
                        <form id="form_validation_add" method="POST" action="/add_manufacturer">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="name" required>
                                    <label class="form-label">Name</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="address" required>
                                    <label class="form-label">Address</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="email" class="form-control" name="email" required>
                                    <label class="form-label">Email</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="number" class="form-control" name="phone" required>
                                    <label class="form-label">Phone Number</label>
                                </div>
                                <div class="help-info">Numbers only</div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <textarea name="description" cols="30" rows="5" class="form-control no-resize"></textarea>
                                    <label class="form-label">Description</label>
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id = "form-edit" class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="header">
                EDIT MANUFACTURER
            </div>
            <div class="body">
                <form id="form_validation_edit" method="POST" action="/edit_manufacturer">
                    <input id = "manu-id" type="hidden" class="form-control" name="id">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id="manu-name" type="text" class="form-control" name="name" required>
                            <label class="form-label">Name</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id = "manu-address" type="text" class="form-control" name="address" required>
                            <label class="form-label">Address</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id ="manu-email" type="email" class="form-control" name="email" required>
                            <label class="form-label">Email</label>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input id = "manu-phone" type="number" class="form-control" name="phone" required>
                            <label class="form-label">Phone Number</label>
                        </div>
                        <div class="help-info">Numbers only</div>
                    </div>
                    <div class="form-group form-float">
                        <div class="form-line">
                            <textarea id = "manu-des" name="description" cols="30" rows="5" class="form-control no-resize"></textarea>
                            <label class="form-label">Description</label>
                        </div>
                    </div>
                    <button class="btn btn-primary waves-effect" type="submit">Update</button>
                    <button id = "btn-cancel" class="btn btn-danger waves-effect" type="button">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{#section 'js'}}
<script src="admin_plugins/jquery-validation/jquery.validate.js"></script> 
<script src="js/bootbox.min.js"></script>
<script>
    $("#form-edit").hide();
     $("[href = '#add']").on('click',function(){
        $("#form-edit").hide();
    })
    function showForm(id,name,address,email,phone,description){
        $("#form-edit").show();
        $("#manu-id").val(id);
        $("#manu-name").val(name);
        $("#manu-address").val(address);
        $("#manu-email").val(email);
        $("#manu-phone").val(phone);
        $("#manu-des").val(description);
        $("#form_validation_edit .form-line").addClass('focused');
        $("#btn-cancel").on('click',function(){
            $("#form-edit").hide();
            $(".form-line").removeClass('focused');
        })
    }
    function deleteManufacturer(manufacturerId){
        bootbox.confirm({
            size: 'small',
            title: 'Delete Manufacturer ' + manufacturerId,
            message: "Are you sure?",
            buttons: {
                confirm: {
                    label: 'Yes',
                    className: 'btn-success'
                },
                cancel: {
                    label: 'No',
                    className: 'btn-danger'
                }
            },
            callback: function (result) {
                if(result){
                    $.ajax({
                        type: "delete",
                        url: "/delete_manufacturer",
                        data: {
                            manufacturerId: manufacturerId,
                        },
                        success: function (response) {
                            if(response === "Success"){
                                $("#"+manufacturerId).remove();
                            }
                        },
                        error: function(response){
                            bootbox.alert("Change fail!");
                        }
                    });
                }
            }
        });
    }
</script>
{{/section}}